<h2>A list of all your favorite animes</h2>


<ul>
    <% for (key in favorites) { %>
        <li><%= favorites[key].name %></li>
        <form method="POST" action="/favorites/<%= favorites[key].id %>?_method=DELETE">
            <input type="submit" value="Delete">
        </form>
        <p><%= favorites[key].genre %></p>
        <form method="POST" action="/favorites/<%= favorites[key].id %>?_method=PUT">
            <input type="text" name="genre">
            <input type="submit" value="Delete">
        </form>
    <% } %>
</ul>

